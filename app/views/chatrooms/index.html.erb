<div class="row">
  <div class="col-sm-2" style="position: fixed; left: 0;">
    <h5>Chatrooms</h5>
    <ul>
      <% current_user.chatrooms.each do |chatroom| %>
        <li><%= link_to chatroom.name, chatroom, data: {behavior: "chatroom-link", chatroom_id: chatroom.id} %></li>
      <% end %>
    </ul>
  </div>
  <div class="col-sm-10 offset-sm-2">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @chatrooms.each do |chatroom| %>
          <tr>
            <td><%= chatroom.name %></td>
            <% if chatroom.admin?(current_user) %><td><%= link_to 'Rename', edit_chatroom_path(chatroom) %><% end %></td>
            <% if chatroom.admin?(current_user) %><td><%= link_to 'Destroy', chatroom, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
            <td><%= link_to 'Join', chatroom_chatroom_users_path(chatroom), method: :post %></td>
            <td><%= link_to 'Leave', chatroom_chatroom_users_path(chatroom), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    
    <%= link_to 'New Chatroom', new_chatroom_path %>
  </div>
</div>



